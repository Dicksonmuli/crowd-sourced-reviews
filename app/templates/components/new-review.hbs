
{{#if addNewReview}}
<div class="container">
	<div class="row" style="margin-top:40px;">
		<div class="col-md-6">
    	<div class="well well-sm">

            <div class="row"  >
                <div class="col-md-12">
                    <form  >
											<div class="form-group">
        								<label for="rating">Rating</label>
        									{{input class="form-control animated" value=rating id="rating" rows="10"}}
      								</div>
                        <input id="ratings-hidden" name="rating" type="hidden">
												 <label for="author">Author</label>
                        {{input class="form-control animated"  id="author" value=author rows="10"}}
												<div class="form-group">
        									<label for="content">Content</label>
        										{{input value=content class="form-control" name="comment" id="content" rows="10"}}
      									</div>
                        <div class="text-right">
                            <button {{action 'saveReview'}}>Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

		</div>
	</div>
</div>
{{else}}
<div class="text-right">
  <button {{action 'reviewFormShow'}}>New Review</button>
</div>
{{/if}}
